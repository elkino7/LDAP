@page "/login"
@page "/login/{ErrorMessage}"
@inject NavigationManager NavManager
@attribute [AllowAnonymous]


<h3>Login</h3>

@if(ErrorMessage != null){
    <div class="text-danger">@ErrorMessage</div>
}
<form action="/account/login" method="post">
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" value="Digite Usuario" class="form-control col-sm-6 col-md-4" />
    </div>
    <div class="form-group">
        <label>Passowrd :</label>
        <input type="password" name="password" value="Digite Password" class="form-control col-sm-6 col-md-4"/>
    </div>
    <button class="btn btn-primary">Logh In</button>

</form>

@code {
    [Parameter] public string ErrorMessage { get; set; }
}
